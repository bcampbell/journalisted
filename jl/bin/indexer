	'by',
	'be',
	'from',
	'have',
	'but',
	'has',
	'an',
	'are',
	'this',
	'said',
	'not',
	'he',
	'been',
	'who',
	'will',
	'they',
	'which',
	'up',
	'had',
	'his',
	'their',
	'one',
	'after',
	'more',
	'out',
	'were',
	'when',
	'year',
	'all',
	'would',
	'there',
	'about',
	'we',
	'last',
	'or',
	'also',
	'than',
	'if',
	'two',
	'i',
	'over',
	'time',
	'so',
	'into',
	'first',
